{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
